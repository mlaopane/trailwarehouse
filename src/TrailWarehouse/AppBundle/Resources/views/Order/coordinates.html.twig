{# TrailWarehouse > AppBundle > Resources > views > Shop > family.html.twig #}

{% extends "TrailWarehouseAppBundle::layout.html.twig" %}


{% block title %}
  {{ parent() }} : Mon panier
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bower_components/angular/angular.min.js') }}"></script>
{% endblock %}

{% block page_nav %}{% endblock %}

{% block page_main %}

  <!-- # Coordinates -->
  <main id="page-order-address" class="bg-white">

      <!-- # Heading -->
      <div class="heading-container heading-container-blue">
        <h3 class="heading">Coordonn√©es</h3>
      </div>
      <!-- Heading # -->

      <!-- # Flashes -->
      <div class="d-flex block mb-3">
        {{ include('TrailWarehouseAppBundle:Error:alerts.html.twig') }}
      </div>

      <div class="page-content mx-auto px-3 row">
        <div class="col-12 col-md-6 col-xl-5">

          <!-- # Form Container -->
          <div class="form-container mb-5 rounded">

            <!-- # Form title -->
            <div class="col-12 mb-3">
              <h2>Ajouter une nouvelle adresse</h2>
            </div>
            <!-- Form title # -->

            <!-- # Col -->
            <div class="col-12">

              <!-- # Coordinate Form -->
              {{ form_start(coordinate_form) }}

                <!-- # Title -->
                <div class="form-group mb-4">
                  {{ form_label(coordinate_form.title) }}
                  <div class="input-group">
                    <div class="input-group-addon">@</div>
                    {{ form_widget(coordinate_form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre' }}) }}
                  </div>
                </div>
                <!-- Address # -->

                <!-- # Address -->
                <div class="form-group mb-4">
                  {{ form_label(coordinate_form.address) }}
                  <div class="input-group">
                    <div class="input-group-addon">@</div>
                    {{ form_widget(coordinate_form.address, {'attr': {'class': 'form-control', 'placeholder': 'Adresse' }}) }}
                  </div>
                </div>
                <!-- Address # -->

                <!-- # Zipcode -->
                <div class="form-group mb-4">
                  <div class="d-flex justify-content-start align-items-baseline">
                    {{ form_label(coordinate_form.zipcode) }}
                  </div>
                  <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                    {{ form_widget(coordinate_form.zipcode, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
                  </div>
                </div>
                <!-- Zipcode # -->

                <!-- # City -->
                <div class="form-group mb-4">
                  <div class="d-flex justify-content-start align-items-baseline">
                    {{ form_label(coordinate_form.city) }}
                  </div>
                  <div class="input-group">
                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                    {{ form_widget(coordinate_form.city, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
                  </div>
                </div>
                <!-- City # -->

                <!-- # Submit -->
                <div class="col-12 d-flex justify-content-center justify-content-sm-end align-items-baseline">
                  {{ form_widget(coordinate_form.save, {'attr': {'class':'btn btn-confirm w-100'}}) }}
                </div>
                <!-- Submit # -->

                {{ form_rest(coordinate_form) }}

              {{ form_end(coordinate_form) }}

            </div>
            <!-- Col # -->

          </div>
          <!-- Form Container # -->

        </div>

        <div class="col-12 col-md-6 col-xl-7">
          <div id="addresses">
            <div class="block">
              <div class="card">
                <div class="card-header">
                  <h3 class="mb-0">Mes adresses</h3>
                </div>
                {% for coordinate in app.user.coordinates %}
                  <div class="card-block">
                    <h4 class="card-title font-weight-bold">{{ coordinate.title }}</h4>
                    <dl class="card-text">
                      <dd>{{ coordinate.address }}</dd>
                      <dd>{{ coordinate.zipcode }}</dd>
                      <dd>{{ coordinate.city }}</dd>
                    </dl>
                    <a href="" class="card-link">Supprimer</a>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>

  </main>
  <!-- Coordinates # -->

{% endblock %}

{% block additional_javascripts %}
  <script src="{{ asset('js/app-common.js') }}"></script>
  <script src="{{ asset('js/cart.js') }}"></script>
{% endblock %}
