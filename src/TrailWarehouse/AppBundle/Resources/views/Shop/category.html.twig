{# TrailWarehouse > AppBundle > Resources > views > Shop > category.html.twig #}

{% extends "TrailWarehouseAppBundle::layout.html.twig" %}


{% block title %}
  {{ parent() }} - {{ "Cat√©gorie : " ~ active_category.name | capitalize }}
{% endblock %}


{% block page_nav %}
  <!-- # Page Navigation -->
  <nav id=menu-category class="container">
    {% block menu_category %}
    {{ render(controller('TrailWarehouseAppBundle:Shop:menu', {active_category: active_category})) }}
    {% endblock %}
  </nav>
  <!-- Category Navigation # -->
{% endblock %}


{% block breadcrumb %}
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{ path('app_home') }}"><span class="glyphicon glyphicon-home"></span></a>
    </li>
    <li class="breadcrumb-item">
      <a href="{{ path('app_shop') }}">Boutique</a>
    </li>
    <li class="breadcrumb-item active">
      <a href="{{ path('app_shop_category', {category: active_category.name}) }}">{{ active_category.name | capitalize }}</a>
    </li>
  </ol>
{% endblock %}


{% block page_main %}
  <!-- # Main -->
  <main id="page-category" class="page">
  {% if families is empty %}

    <!-- # Alert -->
    <div class="ness-block warning mb-3">
      <span>Aucun produit disponible dans {{ active_category.name | capitalize }}</span>
    </div>
    <!-- Alert # -->

  {% else %}

    <!-- # Container -->
    <div id="families-container" class="mb-4">

      <!-- # Category Name -->
      <div id="category-name" class="row no-gutters justify-content-center px-3 py-4 mb-3">
        <h2 class="border-bottom">{{ active_category.name | capitalize }}</h2>
      </div>
      <!-- Category Name # -->

      <div id="families" class="row no-gutters px-0 px-lg-2 px-xl-3 py-3">
      {% for family in families %}
        {% set url = family.name | lower | replace({' ':'-', '\'':'-'}) %}

        <!-- # Family -->
        <div class="family col-12 col-md-6 col-lg-4 col-xl-3 p-2">
          <div class="card px-2">
            <a href="{{ path('app_shop_family', {family: url}) }}">
              <div class="image-container row no-gutters justify-content-center px-2">
                <img src="{{ asset('images/no_picture.png') }}" alt="{{ family.name ~ ' - ' ~ family.brand.name }}" class="round img-fluid">
              </div>
              <h4 class="card-title row no-gutters justify-content-center px-2">{{ family.name | capitalize }} - {{ family.brand.name | upper }}</h4>
            </a>
          </div>
        </div>
        <!-- # Family -->

      {% endfor %}
      </div>
    </div>
    <!-- Category Families # -->

  {% endif %}
  </main>
  <!-- # Main # -->

{% endblock %}
