{# TrailWarehouse > AppBundle > Resources > views > Shop > category.html.twig #}

{% extends "TrailWarehouseAppBundle::layout.html.twig" %}


{% block title %}
  {{ parent() }} : {{ family.name | capitalize }}
{% endblock %}

{% block page_main %}
  <main id="page-category" class="page">

    <!-- # Family -->
    <div id="families" class="container bg-whitegrey px-2 py-3 mb-4">
      <div class="row px-0 px-lg-3 px-xl-5">
      {% if product is not null %}
        <div class="family col-12 col-md-6 col-lg-4 col-xl-3 py-2 px-xl-1">
          <h4 class="row justify-content-center">{{ product.family.name | capitalize }} - {{ product.family.brand.name | upper }}</h4>
          <div class="row justify-content-center">{{ product.color.name | capitalize }} - {{ product.size.value }}</div>
          {% if product.stock <= 0 %}
            <div class="text-danger">Produit indisponible</div>
          {% else %}
            <div class="text-success">En Stock : {{ product.stock }}</div>
          {% endif %}
          <span class="text-success">Prix : {{ product.price }}</span>
          <div class="image-container row justify-content-center">
            <img src="{{ asset('images/no_picture.png') }}" alt="{{ product.family.name ~ ' - ' ~ product.family.brand.name }}" class="round img-fluid">
          </div>
        </div>
      {% else %}
        <div class="ness-block warning my-3 mx-auto">
          <span>Aucun produit disponible</span>
        </div>
      {% endif %}
      </div>
    </div>
    <!-- Family # -->

    <!-- # Colors -->
    <div class="container bg-whitegrey px-2 py-3 mb-4">
      {% if colors is not empty %}
      <ul>
        {% for color in colors %}
          <li id="p-color-{{ loop.index }}" style="background:{{ color.value }}">{{ color.name }}</li>
        {% endfor %}
      </ul>
      {% endif %}
    </div>

  </main>
{% endblock %}
