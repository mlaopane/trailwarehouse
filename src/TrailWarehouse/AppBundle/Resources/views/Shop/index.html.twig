{# TrailWarehouse > AppBundle > Resources > views > Shop > index.html.twig #}

{% extends "TrailWarehouseAppBundle::layout.html.twig" %}


{% block title %}
  {{ parent() }} : Boutique
{% endblock %}


{% block breadcrumb %}
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{ path('home') }}"><span class="glyphicon glyphicon-home"></span></a>
    </li>
    <li class="breadcrumb-item active">
      <a href="{{ path('shop') }}">Boutique</a>
    </li>
  </ol>
{% endblock %}

{% block page_main %}
  <main id="page-shop">

    <!-- # News -->
    <div id="news">

      <!-- # News Carousel -->
      <div id="news-carousel" class="carousel slide" data-ride="carousel">

        <!-- # Indicators -->
        <ol class="carousel-indicators">
          {% for id_diapo in 1..4 %}
          <li class="{{ loop.index0 == 0 ? 'active' : '' }}"
            data-target="#news-carousel" data-slide-to="{{ loop.index0 }}"></li>
          {% endfor %}
        </ol>
        <!-- Indicators # -->

        <!-- # Content -->
        <div class="carousel-inner" role="listbox">
          {% for id_diapo in 1..4 %}
          <div class="carousel-item {{ loop.index0 == 0 ? 'active' : '' }}">
            <img class="" src="{{ asset('images/diapo_' ~ id_diapo ~ '.jpg') }}" alt="Slide {{ loop.index }}">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="caption-title mb-3">{{ 'News n°' ~ loop.index }}</h2>
              <p class="caption-content">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit.<br>
                Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              </p>
            </div>
          </div>
          {% endfor %}
        </div>
        <!-- Content # -->

        <!-- # Prev Button -->
        <a class="carousel-control-prev" href="#news-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <!-- Prev Button # -->

        <!-- # Next Button -->
        <a class="carousel-control-next" href="#news-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <!-- Next Button # -->

      </div>
      <!-- Carousel # -->

    </div>
    <!-- News Diaporama # -->

    <!-- # Sélections du moment -->
    <div id="selections" class="col-12">

      <!-- # Sélection -->
      <div id="chaussures" class="selection p-3">
        <div class="row justify-content-center">
          <h2 class="border-bottom mb-4">Sélection du moment</h2>
        </div>
        <div class="ness-diaporama row">
          {% for i in 1..3 %}
          <div class="col-12 col-md-4">
            <img src="{{ asset('images/thumbnail.svg') }}" alt="" class="d-block rounded mx-auto">
          </div>
          {% endfor %}
        </div>

      </div>
      <!-- Sélection # -->

    </div>
    <!-- Sélections du moment # -->

    <!-- # Brands -->
    <div id="brands" class="container p-3">
      <div class="row justify-content-center">
        <h2 class="border-bottom mb-4">Marques</h2>
      </div>
      <div class="row px-3">
        {% for i in 1..8 %}
        <div class="brand col-6 col-sm-4 col-md-3 col-lg-2">
          <img src="{{ asset('images/thumbnail.svg') }}" alt="" class="round">
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- Brands # -->

  </main>
{% endblock %}
