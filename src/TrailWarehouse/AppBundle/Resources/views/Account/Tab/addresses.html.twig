{# TrailWarehouse > AppBundle > Resources > views > Account > Tab > addresses.html.twig #}

<!-- # Address -->
<div id="mes-adresses" class="tab-pane ness-block bg-white fade {{ tabs[2].class_pane }} mx-auto">

  <div class="row">
    <div class="col-12 col-md-6">
      <h3>Ajouter une nouvelle adresse</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-6">
      <div class="ness-table-container">
        <table>
          <thead>
            <tr>
              <th>Libellé</th>
              <th>N°, Voie</th>
              <th>Code postal</th>
              <th>Ville</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for address in app.user.addresses %}
              <tr>
                <td>{{ address.title }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.zipcode }}</td>
                <td>{{ address.city }}</td>
                <td>
                  <a href="{{ path('app_account_remove_address', { address_id : address.id }) }}">Supprimer</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- Address # -->
