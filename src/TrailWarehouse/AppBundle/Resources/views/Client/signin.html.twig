{# TrailWarehouse > AppBundle > Resources > views > signin.html.twig #}

{% extends 'TrailWarehouseAppBundle::layout.html.twig' %}


{% block title %}
  {{ parent() }} : Connexion
{% endblock %}


{% block page_main %}
  <main id="page-signin">

    <!-- # Form Container -->
    <div class="form-container">

      <!-- # Signin Form -->
      <form id="signin-form" class="" action="" method="post">

        <!-- # Modal Body -->
        <div class="modal-body">

          <!-- # E-mail -->
          <div class="form-group">
            <label for="">Adresse Ã©lectronique</label>
            <div class="input-group">
              <div class="input-group-addon">@</div>
              <input id="signin-email" class="form-control" type="text" name="email" value="" placeholder="E-mail">
            </div>
          </div>
          <!-- E-mail # -->

          <!-- # Password -->
          <div class="form-group">
            <label for="">Mot de passe</label>
            <div class="input-group">
              <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
              <input id="signin-password" class="form-control" type="password" name="password" value="" placeholder="Mot de passe">
            </div>
          </div>
          <!-- Password # -->

        </div>
        <!-- Modal Body # -->

        <!-- # Modal Footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-cancel" data-dismiss="modal">Annuler</button>
          <button type="submit" class="btn btn-confirm">Se connecter</button>
        </div>
        <!-- Modal Footer # -->

      </form>
      <!-- Signin Form # -->

    </div>
    <!-- Form Container # -->

  </main>
{% endblock %}
