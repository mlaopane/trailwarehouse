{# TrailWarehouse > AppBundle > Resources > views > Shop > index.html.twig #}

{% extends "TrailWarehouseAppBundle::layout.html.twig" %}


{% block title %}
  {{ parent() }} : Accueil
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bower_components/imagesloaded/imagesloaded.pkgd.min.js') }}"></script>
{% endblock %}

{% block page_main %}
  <main id="page-shop">

    {% block name %}{% endblock %}

    <!-- # News -->
    <div id="news">

      <!-- # News Carousel -->
      <div id="news-carousel" class="carousel slide" data-ride="carousel">

        <!-- # Indicators -->
        <ol class="carousel-indicators">
          {% for id_diapo in 1..4 %}
          <li class="{{ loop.index0 == 0 ? 'active' : '' }}"
            data-target="#news-carousel" data-slide-to="{{ loop.index0 }}"></li>
          {% endfor %}
        </ol>
        <!-- Indicators # -->

        <!-- # Content -->
        <div class="carousel-inner" role="listbox">
          {% for id_diapo in 1..4 %}
          <div class="carousel-item {{ loop.index0 == 0 ? 'active' : '' }}">
            <img class="" src="{{ asset('images/diapo_' ~ id_diapo ~ '.jpg') }}" alt="Slide {{ loop.index }}">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="caption-title mb-3">{{ 'News n°' ~ loop.index }}</h2>
              <p class="caption-content">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit.<br>
                Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              </p>
            </div>
          </div>
          {% endfor %}
        </div>
        <!-- Content # -->

        <!-- # Prev Button -->
        <a class="carousel-control-prev" href="#news-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <!-- Prev Button # -->

        <!-- # Next Button -->
        <a class="carousel-control-next" href="#news-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <!-- Next Button # -->

      </div>
      <!-- Carousel # -->

    </div>
    <!-- News Diaporama # -->

    <!-- # Sélections du moment -->
    <div id="selections" class="col-12">

      <!-- # Sélection -->
      <div class="selection p-3">
        <div class="row justify-content-center">
          <h2 class="border-bottom mb-4">Sélection du moment</h2>
        </div>
        <div class="ness-diaporama row">
          {% for i in 1..3 %}
          <div class="col-12 col-md-6 col-lg-4 mb-2 mb-md-0 d-flex justify-content-center">
            <div class="image-container wrapper">
              <img src="{{ asset('images/no_picture.png') }}" alt="" class="rounded mx-auto img-fluid">
            </div>
          </div>
          {% endfor %}
        </div>

      </div>
      <!-- Sélection # -->

    </div>
    <!-- Sélections du moment # -->

    <!-- # Brands -->
    <div id="brands" class="container p-3">
      <div class="row justify-content-center">
        <h2 class="border-bottom mb-4">Marques</h2>
      </div>
      <div class="row px-3">
      {% if brands is not empty %}
        {% for brand in brands %}
          <div class="brand image-container wrapper col d-flex justify-content-center align-items-center">
            <a href="#" class="">
              <img src="{{ vich_uploader_asset(brand, 'imageFile') }}" alt="Logo {{ brand.name|capitalize }}" class="round img-fluid mx-auto d-block">
            </a>
          </div>
        {% endfor %}
      {% endif %}
      </div>
    </div>
    <!-- Brands # -->

  </main>
{% endblock %}

{% block additional_javascripts %}
  <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
