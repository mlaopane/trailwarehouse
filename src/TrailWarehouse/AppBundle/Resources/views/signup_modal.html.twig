{# TrailWarehouse > AppBundle > Resources > views > signup_modal.html.twig #}

<!-- Signup Modal -->
<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <!-- # Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Inscription chez Trail Warehouse</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal Header # -->

      <!-- # Form Container -->
      <div class="form-container">

        <!-- # Signup Form -->
        <form id="signup-form" class="" action="{{ path('signup') }}" method="post">

          <!-- # Modal Body -->
          <div class="modal-body">

            <!-- # Firstname -->
            <div class="form-group">
              <label for="">Prénom*</label>
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <input id="signin-firstname" class="form-control" type="text" name="firstname" value="" placeholder="Prénom">
              </div>
            </div>
            <!-- Firstname # -->

            <!-- # Laststname -->
            <div class="form-group">
              <label for="">Nom de famille*</label>
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                <input id="signin-lastname" class="form-control" type="text" name="lastname" value="" placeholder="Nom de famille">
              </div>
            </div>
            <!-- Lastname # -->

            <!-- # E-mail -->
            <div class="form-group">
              <label for="">Adresse électronique*</label>
              <div class="input-group">
                <div class="input-group-addon">@</div>
                <input id="signin-email" class="form-control" type="text" name="email" value="" placeholder="E-mail">
              </div>
            </div>
            <!-- E-mail # -->

            <!-- # Password -->
            <div class="form-group">
              <label for="">Mot de passe*</label>
              <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                <input id="signin-password" class="form-control" type="password" name="password" value="" placeholder="Mot de passe">
              </div>
            </div>
            <!-- Password # -->

          </div>
          <!-- Modal Body # -->

          <!-- # Modal Footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-cancel" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-confirm">S'inscrire</button>
          </div>
          <!-- Modal Footer # -->

        </form>
        <!-- Signup Form # -->

      </div>
      <!-- Form Container # -->

    </div>
  </div>
</div>
