{% spaceless %}
    {% if errors|length > 0 %}
        <div class="ness-block failure mb-3 mx-auto">
            <ul>
                {% for error in errors %}
                    <li><span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endspaceless %}
